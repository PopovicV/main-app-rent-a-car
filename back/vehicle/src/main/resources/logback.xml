<?xml version="1.0" encoding="UTF-8"?>
<configuration>
<!--  FILE PATHS  -->

    <property name="VEHICLE_LOG_PATH" value="/logs"/>

<!--  CONSOLE APPENDER  -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n
            </pattern>
        </encoder>
    </appender>
<!--  FILE APPENDERS  -->


<!--  VEHICLE APPENDER  -->
    <appender name="VEHICLE-SAVE-TO-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${VEHICLE_LOG_PATH}/vehicle_log.log</file>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n
            </Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                ${VEHICLE_LOG_PATH}/archived/vehicle_log_%d{dd-MM-yyyy}_%i.log
            </fileNamePattern>
            <maxFileSize>3MB</maxFileSize>
            <maxHistory>20</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>

    </appender>



<!--APPENDER REF FOR EVERY MICROSERVICE-->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.example.vehicle" additivity="false" level="info">
        <appender-ref ref="VEHICLE-SAVE-TO-FILE" />
    </logger>

</configuration>